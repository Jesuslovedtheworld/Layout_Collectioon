<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_123"
    >
    <ImageView
        android:layout_marginTop="@dimen/dp_3"
        android:id="@+id/phone"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@mipmap/phone"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_21" />
    <TextView
        android:layout_marginTop="@dimen/dp_4"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/addnum"
        android:text="@string/add86"
        android:layout_toRightOf="@id/phone"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_20" />
    <ImageView
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toRightOf="@id/addnum"
        android:background="@mipmap/select"
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_5" />
    <EditText
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_53"
        android:hint="@string/Please_enter_phone_number"
        android:background="@null"
        android:textColor="@color/gC8C8C8"
        android:layout_toRightOf="@id/addnum"
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_22" />
    <TextView
        android:textColor="@color/gFEFEFE"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:text="@string/send_verification_code"
        android:background="@drawable/select_getverificode"
        android:layout_marginLeft="@dimen/dp_263"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_30" />
    <View
        android:id="@+id/line"
        android:layout_centerInParent="true"
        android:layout_below="@id/phone"
        android:layout_width="@dimen/dp_335"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorAccent">
    </View>
    <RelativeLayout
        android:id="@+id/middle"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_267"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/or"
            android:textSize="@dimen/sp_14"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            />
        <ImageView
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/wechat"
            android:background="@mipmap/wechat"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/or"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:layout_centerInParent="true"
            android:layout_below="@id/wechat"
            android:text="@string/wechat_login"
            android:layout_width="@dimen/dp_51"
            android:layout_height="@dimen/dp_17"
            android:textColor="@color/g4DAE46"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/middle"
        android:layout_width="@dimen/dp_209"
        android:layout_height="@dimen/dp_18"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >
        <TextView
            android:textSize="@dimen/sp_13"
            android:text="@string/Login_or_registration"
            android:layout_width="@dimen/dp_157"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:textColor="@color/gFA6A13"
            android:textSize="@dimen/sp_13"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_18"
            android:text="@string/user_agreement"
            />
    </LinearLayout>
</RelativeLayout>
