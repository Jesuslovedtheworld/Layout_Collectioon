<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_123"
    >
    <ImageView
        android:layout_marginTop="@dimen/dp_3"
        android:id="@+id/phone"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@mipmap/phone"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_21" />
    <TextView
        android:layout_marginTop="@dimen/dp_4"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/addnum"
        android:text="@string/add86"
        android:layout_toRightOf="@id/phone"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_20" />
    <ImageView
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toRightOf="@id/addnum"
        android:background="@mipmap/select"
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_5" />
    <EditText
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_53"
        android:hint="@string/Please_enter_phone_number"
        android:background="@null"
        android:textColor="@color/gC8C8C8"
        android:layout_toRightOf="@id/addnum"
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_22" />
    <TextView
        android:textColor="@color/gFEFEFE"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:text="@string/send_verification_code"
        android:background="@drawable/select_getverificode"
        android:layout_marginLeft="@dimen/dp_263"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_30" />
    <View
        android:id="@+id/line"
        android:layout_centerInParent="true"
        android:layout_below="@id/phone"
        android:layout_width="@dimen/dp_335"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorAccent">
    </View>
</RelativeLayout>
